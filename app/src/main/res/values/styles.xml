<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="autoCompleteTextViewStyle">@style/SuggestionAutoCompleteTextViewStyle</item>
        <item name="textAppearanceSearchResultTitle">@style/SuggestionTitleStyle</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.Button</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.NoStatusBar" />

    <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme.NoActionBar">
        <!--<item name="android:windowActionBarOverlay">true</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.App.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="preferenceTheme">@style/PreferenceThemeOverlay</item>-->

        <!--<item name="actionButtonStyle">@style/Widget.App.ActionButton</item>-->
    </style>

    <style name="Theme.App.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>

        <item name="actionButtonStyle">@style/Widget.App.ActionButton</item>
    </style>

    <style name="SuggestionAutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground">@drawable/dropview_background_selector</item>
    </style>

    <style name="SuggestionTitleStyle" parent="TextAppearance.AppCompat.SearchResult.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="DropDownListItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:dropDownItemStyle">@style/DropDownListItemStyle</item>
        <item name="android:spinnerItemStyle">@style/DropDownListItemStyle</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.RadioButton">
        <item name="android:textColor">@color/radiobutton_text_selector</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Image" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.Image.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/listview_text_selector</item>
    </style>

    <style name="TextAppearance.Image.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/listview_text_selector</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance.AppCompat.Title.Inverse">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.ListItem" />

    <style name="TextAppearance.ListItem.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.ListItem.SubTitle">
        <item name="android:textAppearance">@style/TextAppearance.Subtitle</item>
        <item name="android:textAppearanceListItemSmall"></item>
    </style>

    <style name="AppTheme.MainActivity" parent="AppTheme.NoActionBar">
        <item name="android:textAppearanceListItem">@style/TextAppearance.ListItem.Title</item>
    </style>

    <style name="AppTheme.BangumiDetailsActivity" parent="AppTheme.NoActionBar.NoStatusBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="AppTheme.SearchResultActivity" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.LoginActivity">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.MyFavoritesActivity" parent="AppTheme.NoActionBar">
        <item name="android:spinnerStyle">@style/SpinnerStyle</item>
    </style>

    <style name="AppTheme.LaunchActivity" />

    <style name="AppTheme.VideoPlayActivity" parent="AppTheme.NoActionBar.FullScreen" />

    <style name="AppTheme.FeedbackActivity" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.RadioButton</item>
    </style>

    <style name="AppTheme.SettingsActivity">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Widget" />

    <style name="Widget.AppTheme" />

    <style name="Widget.AppTheme.TextView" />

    <style name="Widget.AppTheme.TextView.VideoPlayHint" parent="Widget">
        <item name="android:alpha">0.7</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@android:color/black</item>
    </style>
</resources>
