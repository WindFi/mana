<resources>


    <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme.NoActionBar">
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:statusBarColor">#44000000</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="linearProgressIndicatorStyle">
            @style/Widget.AppTheme.Progressbar.LinearProgressIndicator
        </item>
    </style>

    <style name="AppTheme.NoActionBar.NoStatusBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Widget.AppTheme.Progressbar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>
</resources>